<Page x:Class="TaskManager.View.Pages.Admin.EditUserResponsibilityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditUserResponsibilityPage" Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Values/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/Values/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="header" Text="Зоны ответственности сотрудника" Grid.ColumnSpan="3" 
                   Style="{StaticResource HeaderTextBlock}" Foreground="{StaticResource brown}"/>
        <Grid x:Name="responsibleScopes" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource InfoTextBlock}">
                <Run Text="{Binding SelectedUser.Lname}"/>
                <Run Text=" ответственнен за"/>
            </TextBlock>
            <ListView x:Name="userResponsibilites" Grid.Row="1" Grid.Column="0"
                      Style="{StaticResource BaseListView}" Margin="10"
                      ItemsSource="{Binding UserScopes}" 
                      SelectedItem="{Binding UserSelectedScope}"
                      DisplayMemberPath="Name">
            </ListView>
        </Grid>
        <Grid x:Name="availScopes" Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Доступные зоны ответственности" Style="{StaticResource InfoTextBlock}"/>
            <ListView Grid.Row="1" Grid.Column="0"
                      Style="{StaticResource BaseListView}" Margin="10"
                      ItemsSource="{Binding AvailScopes}" 
                      SelectedItem="{Binding AvailSelectedScope}"
                      DisplayMemberPath="Name">
            </ListView>
        </Grid>

        <Grid x:Name="moveButtons" Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="moveToAvailable" Grid.Row="0"
                Margin="2 90 2 4"
                Style="{StaticResource ButtonStackPanel}">
            <Button Content="->" 
                    Style="{StaticResource BaseButton}"
                    Command="{Binding MoveToAvailCommand}"/>
        </Border>
            <Border x:Name="moveToUser" Grid.Row="1"
                Margin="2 4 2 90" 
                Style="{StaticResource ButtonStackPanel}">
                <Button Content="&lt;-" 
                    Style="{StaticResource BaseButton}"
                    Command="{Binding MoveToUserCommand}"/>
            </Border>
        </Grid>
        
        <Border x:Name="goBack" Grid.Row="2" Grid.ColumnSpan="3"
                Style="{StaticResource ButtonStackPanel}" Margin="280 10 280 10">
            <Button Content="{StaticResource back}"
                    Style="{StaticResource BaseButton}"
                    Command="{Binding GoBackCommand}"/>
        </Border>
        
    </Grid>
</Page>
