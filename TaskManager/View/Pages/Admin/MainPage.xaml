<Page x:Class="TaskManager.View.Pages.Admin.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Admin" 
      xmlns:admin="clr-namespace:TaskManager.ViewModel.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="White"
      >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/StackPanelStyles.xaml"/>
                <ResourceDictionary Source="/Values/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="gridFunctions" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="textBlockTime" Grid.Row="0"
                       Style="{StaticResource InfoTextBlock}" Text="time now is 12:45"/>
            <Border x:Name="borderToCategories" Grid.Row="1"
                    Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 5">
                <Button x:Name="buttonCategories"
                        Style="{StaticResource BigButton}"
                        Content="{StaticResource toCategories}"/>
            </Border>
            <Border x:Name="borderToEmployees" Grid.Row="2"
                    Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 5">
                <Button x:Name="buttonEmployees"
                    Style="{StaticResource BigButton}"
                    Content="{StaticResource toEmployees}"/>
            </Border>

            <Grid x:Name="gridBottomPart" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border x:Name="borderToProfile" Grid.Row="0" Grid.Column="0"
                        Style="{StaticResource ButtonStackPanel}" Margin="20 5 5 5">
                    <Button x:Name="buttonProfile" Content="{StaticResource toProfile}"
                            Style="{StaticResource BigButton}" 
                            Command="{Binding RefreshCategoriesCommand}"/>
                </Border>
                <Border x:Name="borderToReports" Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource ButtonStackPanel}" Margin="5 5 20 5">
                    <Button x:Name="buttonReports" Content="{StaticResource toReports}"
                            Style="{StaticResource BigButton}"/>
                </Border>
                <Border x:Name="borderToLogging" Grid.ColumnSpan="2" Grid.Row="1"
                        Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 8">
                    <Button x:Name="buttonLogging" Content="{StaticResource toLogging}"
                            Style="{StaticResource BigButton}"/>
                </Border>
            </Grid>
        </Grid>
        <Grid x:Name="gridTasksTable" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>  

            <Grid x:Name="gridHeaderWithChooseCategory" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlockAllTasks" Grid.Row="0" 
                           Text="{StaticResource allTasks}" Style="{StaticResource InfoTextBlock}"/>
                <Border x:Name="borderCategories" Grid.Row="1"
                        Style="{StaticResource ComboBoxHeaderStackPanel}">
                    <ComboBox x:Name="comboBoxCategories" 
                              Style="{StaticResource BaseComboBox}"
                              ItemsSource="{Binding Categories}" DisplayMemberPath="Name"/>
                </Border>
            </Grid>
            <Grid x:Name="gridTasksList" Grid.Row="1" Margin="5 5 5 8">
                <ListView x:Name="listViewTasks" ItemsSource="{Binding Tasks}"
                          BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Владелец" DisplayMemberBinding="{Binding Owner}"/>
                            <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding Since}"/>
                            <GridViewColumn Header="Дедлайн" DisplayMemberBinding="{Binding Deadline}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
