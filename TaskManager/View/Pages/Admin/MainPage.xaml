<Page x:Class="TaskManager.View.Pages.Admin.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Admin" 
      xmlns:admin="clr-namespace:TaskManager.ViewModel.Pages.Admin"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="White"
      >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Values/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="gridFunctions" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="1.2*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            
            <Border x:Name="borderToCategories" Grid.Row="1"
                    Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 5">
                <Button x:Name="buttonCategories"
                        Style="{StaticResource BigButton}"
                        Content="{StaticResource toCategories}"
                        Command="{Binding GoToEditScopesCommand}"/>
            </Border>
            <Border x:Name="borderToEmployees" Grid.Row="2"
                    Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 5">
                <Button x:Name="buttonEmployees"
                    Style="{StaticResource BigButton}"
                    Content="{StaticResource toEmployees}"
                    Command="{Binding GoToEditEmployeesCommand}"/>
            </Border>
            
            <Grid x:Name="gridBottomPart" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border x:Name="borderToReports" Grid.Row="0"
                            Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 8">
                    <Button x:Name="buttonAddTask" Content="Добавить задачу"
                            Style="{StaticResource BigButton}"
                            Command="{Binding GoToAddTaskCommand}"/>
                </Border>
                <Border x:Name="borderDeleteTask" Grid.Row="1"
                        Style="{StaticResource ButtonStackPanel}" Margin="20 5 20 8">
                    <Button x:Name="buttonDeleteTask" Content="Удалить задачу"
                            Style="{StaticResource BigButton}"
                            Command="{Binding DeleteTaskCommand}"/>
                </Border>
            </Grid>

            <Border x:Name="borderExit" Grid.Row="4"
                Style="{StaticResource ButtonStackPanel}" Margin="20">
                <Button x:Name="buttonExit"
                    Style="{StaticResource BigButton}"
                    Content="Выйти"
                    Command="{Binding ExitCommand}"/>
            </Border>
        </Grid>
        <Grid x:Name="gridTasksTable" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>  

            <Grid x:Name="gridHeaderWithChooseCategory" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlockAllTasks" Grid.Row="0" 
                           Text="Задачи на сегодня:" Style="{StaticResource InfoTextBlock}"/>
                <Border x:Name="borderCategories" Grid.Row="1"
                        Style="{StaticResource ComboBoxHeaderStackPanel}">
                    <ComboBox x:Name="comboBoxCategories" 
                              Style="{StaticResource BaseComboBox}"
                              SelectedItem="{Binding SelectedCategory}"
                              ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValuePath="Name"/>
                </Border>
            </Grid>
            <Grid x:Name="gridTasksList" Grid.Row="1" Margin="5 5 5 8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <ListView x:Name="listViewTasks" Grid.Row="0" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"
                          BorderThickness="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding GoToUpdateTaskCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Владелец" DisplayMemberBinding="{Binding Owner}"/>
                            <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}"/>
                            <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding Since}"/>
                            <GridViewColumn Header="Дедлайн" DisplayMemberBinding="{Binding Deadline}"/>
                            <GridViewColumn Header="Зона ответственности" DisplayMemberBinding="{Binding Scope}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Border x:Name="borderCancelSelection" Style="{StaticResource ButtonStackPanel}" Grid.Row="1" Margin="20 5 20 5">
                    <Button x:Name="buttonCancelSelection" Content="{StaticResource cancelSelection}" Style="{StaticResource BaseButton}"
                            Command="{Binding CancelSelectionCommand}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
