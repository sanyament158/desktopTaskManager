<Page x:Class="TaskManager.View.Pages.Admin.EditEmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditEmployeesPage" Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="gridRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="gridFunctions" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <TextBlock x:Name="textBlockHeader" Text="Доступные действия:" Grid.Row="0"
                           Style="{StaticResource InfoTextBlock}"/>

            <Grid x:Name="gridFunctionsButtons" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="borderAddUser" Grid.Row="0" Margin="5"
                    Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonAddUser" Content="Добавить сотрудника" 
                        Style="{StaticResource BigButton}"
                        Command="{Binding GoToAddEmployeeCommand}"/>
                    </Border>
                    <Border x:Name="borderRemoveUser" Grid.Row="1" Margin="5"
                    Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonRemoveUser" Content="Удалить сотрудника" 
                        Style="{StaticResource BigButton}"
                        Command="{Binding DeleteUserCommand}"/>
                    </Border>
                    <Border x:Name="borderUpdateUser" Grid.Row="2" Margin="5"
                    Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonUpdateUser" Content="Редактировать" 
                        Style="{StaticResource BigButton}"
                        Command="{Binding GoToUpdateUserCommand}"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        <Border x:Name="borderBack" Grid.Row="1" Grid.Column="0"
            Style="{StaticResource ButtonStackPanel}" Margin="20 10 20 10">
                        <Button x:Name="buttonBack" Content="{StaticResource back}"
                Style="{StaticResource BaseButton}"
                Command="{Binding GoBackCommand}"/>
        </Border>

        <Grid x:Name="gridListScopes" Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Все пользователи:" Style="{StaticResource InfoTextBlock}"/>
            <ListView x:Name="listViewUsers" Grid.Row="1" Margin="10"
              ItemsSource="{Binding Users}" BorderThickness="0"
              SelectedItem="{Binding SelectedUser}"
              >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding Username}"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Lname}"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding IdRole}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
