<Page x:Class="TaskManager.View.Pages.Admin.EditScopesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditScopesPage"
      Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/StackPanelStyles.xaml"/>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridFunctions" Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>
            
            <Grid x:Name="gridFunctionsHeader" Grid.Row="0">
                <TextBlock Text="available actions:" Style="{StaticResource InfoTextBlock}"/>
            </Grid>
            
            <Grid x:Name="gridFunctionsButtons" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="borderAddScope" Grid.Row="0" Margin="5"
                            Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonAddScope" Content="add scope" 
                                Style="{StaticResource BigButton}"
                                Command="{Binding GoToAddScopeCommand}"/>
                    </Border>
                    <Border x:Name="borderRemoveScope" Grid.Row="1" Margin="5"
                            Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonRemoveScope" Content="remove scope" Style="{StaticResource BigButton}"/>
                    </Border>
                    <Border x:Name="borderUpdateScope" Grid.Row="2" Margin="5"
                            Style="{StaticResource ButtonStackPanel}">
                        <Button x:Name="buttonUpdateScope" Content="update scope" Style="{StaticResource BigButton}"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="gridListScopes" Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="all scopes:" Style="{StaticResource InfoTextBlock}"/>
            <ListView x:Name="listViewScopes" Grid.Row="1" Margin="10"
                      ItemsSource="{Binding Scopes}"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
