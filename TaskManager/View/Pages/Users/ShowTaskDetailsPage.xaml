<Page x:Class="TaskManager.View.Pages.Users.ShowTaskDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowTaskDetailsPage" Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Values/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="/Values/TextBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlockHeader" Grid.Row="0"
        Style="{StaticResource HeaderTextBlock}" Foreground="Black">
            <Run Text="Детали задачи " FontWeight="Regular"/>
            <Run Text="{Binding EnteredTask.Title}"/>
        </TextBlock>

        <Grid x:Name="gridFields" Grid.Row="1" Margin="50 10 50 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="textBlock_ownerField" Grid.Column="1" Grid.Row="0"
                       Text="{Binding EnteredTask.Owner.Lname}" 
                       Style="{StaticResource FieldTextBlock}"/>
            <TextBlock x:Name="textBlockScopeField" Grid.Column="1" Grid.Row="1"
                       Text="{Binding EnteredTask.Scope.Name}"
                       Style="{StaticResource FieldTextBlock}"/>
            <TextBlock x:Name="textBlockBeginField" Grid.Column="1" Grid.Row="2"
                       Text="{Binding EnteredTask.Since}"
                       Style="{StaticResource FieldTextBlock}"/>
            <TextBlock x:Name="textBlockDeadlineField" Grid.Column="1" Grid.Row="3"
                       Text="{Binding EnteredTask.Deadline}"
                       Style="{StaticResource FieldTextBlock}"/>
            
            <TextBlock x:Name="textBlockOwner" Text="Владелец:" Grid.Row="0" Grid.Column="0"
        Style="{StaticResource InfoTextBlock}" HorizontalAlignment="Right" Margin="20"
        />
            <TextBlock x:Name="textBlockScope" Text="Область:" Grid.Row="1" Grid.Column="0"
        Style="{StaticResource InfoTextBlock}" HorizontalAlignment="Right" Margin="20"
        />
            <TextBlock x:Name="textBlockBegin" Text="Начало:" Grid.Row="2" Grid.Column="0"
        Style="{StaticResource InfoTextBlock}" HorizontalAlignment="Right" Margin="20"
        />
            <TextBlock x:Name="textBlockDeadline" Text="Дедлайн:" Grid.Row="3" Grid.Column="0"
        Style="{StaticResource InfoTextBlock}" HorizontalAlignment="Right" Margin="20"
        />
        </Grid>

        <Border x:Name="borderBack" Grid.Row="3"
            Style="{StaticResource ButtonStackPanel}"
            Margin="10" Width="160" HorizontalAlignment="Center">
            <Button x:Name="buttonBack"
                Content="{StaticResource back}" 
                Style="{StaticResource BaseButton}"
                Command="{Binding GoBackCommand}"/>
        </Border>
        <Border x:Name="borderMarkAsFinished" Grid.Row="3"
            Style="{StaticResource ButtonStackPanel}"
            Margin="10" Width="160" HorizontalAlignment="Center">
            <Button x:Name="buttonMarkAsFinished"
                Content="{StaticResource finished}" 
                Style="{StaticResource BaseButton}"
                Command="{Binding MarkAsFinishCommand}"/>
        </Border>
    </Grid>
</Page>
