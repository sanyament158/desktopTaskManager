<Page x:Class="TaskManager.View.Pages.Users.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.View.Pages.Users"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage" Background="White">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Values/Strings.xaml"/>
                <ResourceDictionary Source="/Values/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Values/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Values/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Values/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="gridFunctions" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="textBlockHeader" Text="Доступные действия:" Grid.Row="0"
               Style="{StaticResource InfoTextBlock}"/>

            <Border x:Name="borderMarkAsFinish" Grid.Row="1"
                Style="{StaticResource ButtonStackPanel}" Margin="20">
                <Button x:Name="buttonMarkAsFinish"
                    Style="{StaticResource BigButton}"
                    Content="{StaticResource markAsFinished}"
                    Command="{Binding MarkAsFinishCommand}"/>
            </Border>
            <Border x:Name="borderAddNewTask" Grid.Row="2"
                Style="{StaticResource ButtonStackPanel}" Margin="20">
                <Button x:Name="buttonAddNewTask"
                    Style="{StaticResource BigButton}"
                    Content="Создать задачу"
                    Command="{Binding GoToAddTaskCommand}"/>
            </Border>
            <Border x:Name="borderBack" Grid.Row="3"
                Style="{StaticResource ButtonStackPanel}" Margin="20">
                <Button x:Name="buttonBack"
                    Style="{StaticResource BigButton}"
                    Content="Выйти"
                    Command="{Binding ExitCommand}"/>
            </Border>

        </Grid>
        <Grid x:Name="gridTasksTable" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="gridHeaderWithChooseCategory" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="textBlockAllTasks" Grid.Row="0" 
                       Text="{StaticResource allTasks}" Style="{StaticResource InfoTextBlock}"/>
                <Border x:Name="borderCategories" Grid.Row="1"
                    Style="{StaticResource ComboBoxHeaderStackPanel}">
                    <ComboBox x:Name="comboBoxCategories" 
                          Style="{StaticResource BaseComboBox}"
                          SelectedItem="{Binding SelectedCategory}"
                          ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </Border>
            </Grid>
            <Grid x:Name="gridTasksList" Grid.Row="1" Margin="5 5 5 8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>
                <ListView x:Name="listViewTasks" Grid.Row="0" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"
                      BorderThickness="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding GoToShowDetailsCommand}" CommandParameter="{Binding SelectedTask}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Владелец" DisplayMemberBinding="{Binding Owner.Lname}"/>
                            <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status.Name}"/>
                            <GridViewColumn Header="Заголовок" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Начало" DisplayMemberBinding="{Binding Since}"/>
                            <GridViewColumn Header="Дедлайн" DisplayMemberBinding="{Binding Deadline}"/>
                            <GridViewColumn Header="Зона ответственности" DisplayMemberBinding="{Binding Scope.Name}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Border x:Name="borderCancelSelection" Style="{StaticResource ButtonStackPanel}" Grid.Row="1" Margin="20 5 20 5">
                    <Button x:Name="buttonCancelSelection" Content="{StaticResource cancelSelection}" Style="{StaticResource BaseButton}"
                        Command="{Binding CancelSelectionCommand}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
